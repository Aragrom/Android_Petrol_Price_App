<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/imgViewStarSign"
            android:src = "@drawable/dollar"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:textColor = "#ff2a1a"
            android:text=" "
            android:id = "@+id/diesel_out"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:textColor = "#2137ff"
            android:layout_below="@+id/diesel_out"
            android:text=" "
            android:id = "@+id/unleaded_out"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:layout_below="@+id/unleaded_out"
            android:textColor = "#5cf53d"
            android:text=" "
            android:id = "@+id/super_unleaded_out"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:text=" "
            android:textColor = "#FFFFFF"
            android:layout_below="@+id/super_unleaded_out"
            android:id = "@+id/LPG_out"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:textColor = "#FFFFFF"
            android:layout_below="@+id/LPG_out"
            android:text=" "
            android:id = "@+id/LRP_out"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnBack"
            android:layout_gravity="center_horizontal"
            android:onClick = "onClick"
            android:layout_below="@+id/LRP_out"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>