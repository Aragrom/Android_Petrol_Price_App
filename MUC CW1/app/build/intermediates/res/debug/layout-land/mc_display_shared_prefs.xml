            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:textColor = "#FFFFFF"
            android:text=" "
            android:id = "@+id/LPG_out"
            android:layout_below="@+id/diesel_out"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance = "?android:attr/textAppearanceMedium"
            android:textColor = "#FFFFFF"
            android:text=" "
            android:id = "@+id/LRP_out"
            android:layout_below="@+id/unleaded_out"
            android:layout_toRightOf="@+id/LPG_out"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnBack"
            android:layout_gravity="center_horizontal"
            android:onClick = "onClick"
            android:layout_marginRight="71dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imgViewStarSign"
            android:layout_alignEnd="@+id/imgViewStarSign"/>

    </RelativeLayout>

