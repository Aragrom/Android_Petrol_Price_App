<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.me.myandroidstuff"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    // Output Screen activity
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="org.me.myandroidstuff.PetrolPriceActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:parentActivityName="org.me.myandroidstuff.PetrolPriceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.me.myandroidstuff.PetrolPriceActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        // Shared prefs output screen activity
        <activity
            android:name="org.me.myandroidstuff.SavedPrefOutputActivity"
            android:label="@string/mc_SavedPrefScreen" />
        // Shared Price output screen activity
        <activity
            android:name="org.me.myandroidstuff.QueryOutputActivity"
            android:label="@string/mc_PriceOutScreen" />
        // Declare Canvas screen activity
        <activity
            android:name="org.me.myandroidstuff.CanvasActivity"
            android:label="@string/mCanvas" />
    </application>

</manifest>